<Window x:Class="wpffile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpffile"
        mc:Ignorable="d"
        Title="renho" Width="Auto" Height="Auto">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 0, 10">
            <Button x:Name="button" Content="Button" Width="75" Click="clickBtn"/>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0">
            <TextBox x:Name="textBox" Height="23" TextWrapping="Wrap" Text="请选择文件" Width="500"/>
            <Button x:Name="fileSelectBtn" Content="..." Width="75" HorizontalAlignment="Right" Click="click_selectFile"/>
        </WrapPanel>

        <ScrollViewer HorizontalScrollBarVisibility="Hidden" Grid.Row="1" MaxHeight="100">
            <StackPanel>
                <TextBlock x:Name="tbb" Foreground="White" FontSize="14" TextWrapping="Wrap" Text="Content" Margin="0,20" MaxWidth="200" />
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
