<Window x:Class="date.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:date"
        mc:Ignorable="d"
        Title="UNIX时间戳转换时间@renho" Height="110" Width="500"
        ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,0" Height="100">
        <WrapPanel HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="480" Margin="10, 10">
            <TextBox x:Name="textBox" Height="20" TextWrapping="Wrap" Width="350" Margin="0,0,10,0"/>
            <Button x:Name="button" Content="确定" Width="100" Click="showTime"/>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Left" Height="30" Width="480" Margin="10, 10">
            <TextBox x:Name="textBoxShow" Height="20" TextWrapping="Wrap" Width="350" Margin="0,0,10,0"/>
            <Button x:Name="buttonExit" Content="退出" Width="100" Click="exit"/>
        </WrapPanel>
    </Grid>
</Window>
